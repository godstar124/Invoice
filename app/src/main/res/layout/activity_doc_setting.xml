<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    android:background="@android:color/background_light"
    tools:context="com.invoice.activity.DocSettingActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/relativeLayout5"
        android:background="@android:color/background_dark"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/btn_save"
            android:background="@android:drawable/ic_menu_save"
            android:layout_alignTop="@+id/btn_save"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="15dp" />

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/btn_back"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@android:drawable/ic_menu_revert"
            android:layout_marginLeft="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Document Settings"
            android:id="@+id/textView21"
            android:textSize="20dp"
            android:layout_gravity="center_horizontal"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textColor="@android:color/background_light"
            android:textIsSelectable="false" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView6"
        android:layout_below="@+id/relativeLayout5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/relativeLayout5"
            android:weightSum="1"
            android:id="@+id/linearLayout4">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Order Number Prefix"
                android:id="@+id/textView14"
                android:textColor="@android:color/background_dark"
                android:textSize="22dp"
                android:layout_below="@+id/textView12"
                android:layout_alignLeft="@+id/textView12"
                android:layout_alignStart="@+id/textView12"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="20dp"
                android:textStyle="bold" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/et_prefix"
                android:layout_below="@+id/textView14"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:hint="Prefix"
                android:textColorHint="@android:color/darker_gray"
                android:background="@drawable/abc_textfield_default_mtrl_alpha"
                android:textColor="@android:color/background_dark"
                android:inputType="text|textCapSentences"
                android:textSize="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Start Order Number"
                android:id="@+id/textView15"
                android:textColor="@android:color/background_dark"
                android:textSize="22dp"
                android:layout_below="@+id/textView12"
                android:layout_alignLeft="@+id/textView12"
                android:layout_alignStart="@+id/textView12"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:textStyle="bold" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/et_start_order"
                android:layout_below="@+id/textView14"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:singleLine="true"
                android:hint="Number"
                android:textColorHint="@android:color/darker_gray"
                android:background="@drawable/abc_textfield_default_mtrl_alpha"
                android:textColor="@android:color/background_dark"
                android:textSize="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Sales Tax %"
                android:id="@+id/textView16"
                android:textColor="@android:color/background_dark"
                android:textSize="22dp"
                android:layout_below="@+id/textView12"
                android:layout_alignLeft="@+id/textView12"
                android:layout_alignStart="@+id/textView12"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:textStyle="bold" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/et_tax"
                android:layout_below="@+id/textView14"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:singleLine="true"
                android:hint="%"
                android:textColorHint="@android:color/darker_gray"
                android:background="@drawable/abc_textfield_default_mtrl_alpha"
                android:textColor="@android:color/background_dark"
                android:textSize="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Sales Reps"
                android:id="@+id/textView17"
                android:textColor="@android:color/background_dark"
                android:textSize="22dp"
                android:layout_below="@+id/textView12"
                android:layout_alignLeft="@+id/textView12"
                android:layout_alignStart="@+id/textView12"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:textStyle="bold" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/sp_rep"
                android:dropDownVerticalOffset="35dp"
                android:background="@drawable/abc_spinner_textfield_background_material"
                android:visibility="gone" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linearLayout4"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/et_rep1"
                    android:layout_below="@+id/textView14"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:inputType="text|textCapSentences"
                    android:hint="Sales Rep 1 Name"
                    android:textColorHint="@android:color/darker_gray"
                    android:background="@drawable/abc_textfield_default_mtrl_alpha"
                    android:textColor="@android:color/background_dark"
                    android:singleLine="true"
                    android:textSize="20dp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/et_rep2"
                    android:layout_below="@+id/textView14"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:inputType="text|textCapSentences"
                    android:hint="Sales Rep 2 Name"
                    android:textColorHint="@android:color/darker_gray"
                    android:background="@drawable/abc_textfield_default_mtrl_alpha"
                    android:textColor="@android:color/background_dark"
                    android:singleLine="true"
                    android:textSize="20dp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/et_rep3"
                    android:layout_below="@+id/textView14"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:inputType="text|textCapSentences"
                    android:hint="Sales Rep 3 Name"
                    android:textColorHint="@android:color/darker_gray"
                    android:background="@drawable/abc_textfield_default_mtrl_alpha"
                    android:textColor="@android:color/background_dark"
                    android:singleLine="true"
                    android:textSize="20dp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/et_rep4"
                    android:layout_below="@+id/textView14"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:inputType="text|textCapSentences"
                    android:hint="Sales Rep 4 Name"
                    android:textColorHint="@android:color/darker_gray"
                    android:background="@drawable/abc_textfield_default_mtrl_alpha"
                    android:textColor="@android:color/background_dark"
                    android:singleLine="true"
                    android:textSize="20dp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/et_rep5"
                    android:layout_below="@+id/textView14"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:inputType="text|textCapSentences"
                    android:hint="Sales Rep 5 Name"
                    android:textColorHint="@android:color/darker_gray"
                    android:background="@drawable/abc_textfield_default_mtrl_alpha"
                    android:textColor="@android:color/background_dark"
                    android:singleLine="true"
                    android:textSize="20dp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/et_rep6"
                    android:layout_below="@+id/textView14"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:inputType="text|textCapSentences"
                    android:hint="Sales Rep 6 Name"
                    android:textColorHint="@android:color/darker_gray"
                    android:background="@drawable/abc_textfield_default_mtrl_alpha"
                    android:textColor="@android:color/background_dark"
                    android:singleLine="true"
                    android:textSize="20dp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/et_rep7"
                    android:layout_below="@+id/textView14"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:inputType="text|textCapSentences"
                    android:hint="Sales Rep 7 Name"
                    android:textColorHint="@android:color/darker_gray"
                    android:background="@drawable/abc_textfield_default_mtrl_alpha"
                    android:textColor="@android:color/background_dark"
                    android:singleLine="true"
                    android:textSize="20dp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/et_rep8"
                    android:layout_below="@+id/textView14"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:inputType="text|textCapSentences"
                    android:hint="Sales Rep 8 Name"
                    android:textColorHint="@android:color/darker_gray"
                    android:background="@drawable/abc_textfield_default_mtrl_alpha"
                    android:textColor="@android:color/background_dark"
                    android:singleLine="true"
                    android:textSize="20dp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/et_rep9"
                    android:layout_below="@+id/textView14"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:inputType="text|textCapSentences"
                    android:hint="Sales Rep 9 Name"
                    android:textColorHint="@android:color/darker_gray"
                    android:background="@drawable/abc_textfield_default_mtrl_alpha"
                    android:textColor="@android:color/background_dark"
                    android:singleLine="true"
                    android:textSize="20dp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/et_rep10"
                    android:layout_below="@+id/textView14"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:inputType="text|textCapSentences"
                    android:hint="Sales Rep 10 Name"
                    android:textColorHint="@android:color/darker_gray"
                    android:background="@drawable/abc_textfield_default_mtrl_alpha"
                    android:textColor="@android:color/background_dark"
                    android:singleLine="true"
                    android:textSize="20dp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
