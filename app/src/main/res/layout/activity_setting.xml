<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.invoice.activity.SettingActivity"
    android:background="@android:color/background_light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:id="@+id/linearLayout"
        android:orientation="vertical"
        android:padding="80dp">

        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="MY COMPANY"
            android:id="@+id/btn_company"
            android:background="@android:color/holo_blue_dark"
            android:isScrollContainer="false"
            android:layout_weight="1"
            android:textSize="25dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="DOC SETTINGS"
            android:id="@+id/btn_docSetting"
            android:background="@android:color/holo_blue_dark"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="false"
            android:layout_alignParentStart="false"
            android:layout_below="@+id/btn_company"
            android:layout_marginTop="50dp"
            android:layout_alignLeft="@+id/btn_company"
            android:layout_alignRight="@+id/btn_company"
            android:layout_weight="1"
            android:textSize="25dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="RESET ALL DATA"
            android:id="@+id/btn_reset"
            android:background="@android:color/holo_blue_dark"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="false"
            android:layout_alignParentStart="false"
            android:layout_below="@+id/btn_company"
            android:layout_marginTop="50dp"
            android:layout_alignLeft="@+id/btn_company"
            android:layout_alignRight="@+id/btn_company"
            android:layout_weight="1"
            android:textSize="25dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="IMPORT CUSTOMER CSV FILE"
            android:id="@+id/btn_customerCSV"
            android:background="@android:color/holo_blue_dark"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="false"
            android:layout_alignParentStart="false"
            android:layout_below="@+id/btn_company"
            android:layout_marginTop="50dp"
            android:layout_alignLeft="@+id/btn_company"
            android:layout_alignRight="@+id/btn_company"
            android:layout_weight="1"
            android:textSize="25dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="IMPORT PRODUCT CSV FILE"
            android:id="@+id/btn_productCSV"
            android:background="@android:color/holo_blue_dark"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="false"
            android:layout_alignParentStart="false"
            android:layout_below="@+id/btn_company"
            android:layout_marginTop="50dp"
            android:layout_alignLeft="@+id/btn_company"
            android:layout_alignRight="@+id/btn_company"
            android:layout_weight="1"
            android:textSize="25dp"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>

</RelativeLayout>
