<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.invoice.activity.AddCustomerActivity"
    android:background="@android:color/background_light">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/relativeLayout2"
        android:background="@android:color/background_dark">

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/btn_save"
            android:background="@android:drawable/ic_menu_save"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true" />

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/btn_back"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@android:drawable/ic_menu_revert"
            android:layout_marginLeft="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Add New Customer"
            android:id="@+id/textView27"
            android:textSize="20dp"
            android:layout_gravity="center_horizontal"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textColor="@android:color/background_light"
            android:textIsSelectable="false" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/relativeLayout2">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusableInTouchMode="true"
            android:divider="@android:color/darker_gray">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Customer Name"
                    android:id="@+id/textView3"
                    android:textColor="@android:color/background_dark"
                    android:textSize="22dp"
                    android:layout_marginLeft="20dp"
                    android:textStyle="bold" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textCapSentences"
                    android:ems="10"
                    android:id="@+id/et_name"
                    android:layout_below="@+id/textView3"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="5dp"
                    android:singleLine="true"
                    android:textColorHint="@android:color/darker_gray"
                    android:hint="Customer Name"
                    android:background="@drawable/abc_textfield_default_mtrl_alpha"
                    android:textColor="@android:color/background_dark" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Contact"
                    android:id="@+id/textView29"
                    android:textColor="@android:color/background_dark"
                    android:textSize="22dp"
                    android:layout_marginLeft="20dp"
                    android:textStyle="bold" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textCapSentences"
                    android:id="@+id/et_contact"
                    android:layout_below="@+id/textView29"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="5dp"
                    android:singleLine="true"
                    android:textColorHint="@android:color/darker_gray"
                    android:hint="Contact"
                    android:background="@drawable/abc_textfield_default_mtrl_alpha"
                    android:textColor="@android:color/background_dark" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Billing Address"
                    android:id="@+id/textView4"
                    android:textColor="@android:color/background_dark"
                    android:textSize="22dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Address"
                    android:id="@+id/textView5"
                    android:textColor="@android:color/background_dark"
                    android:textSize="20dp"
                    android:layout_below="@+id/textView4"
                    android:layout_alignLeft="@+id/textView4"
                    android:layout_alignStart="@+id/textView4"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/et_billingAddress"
                    android:layout_below="@+id/textView5"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:textColorHint="@android:color/darker_gray"
                    android:hint="Address"
                    android:background="@drawable/abc_textfield_default_mtrl_alpha"
                    android:textColor="@android:color/background_dark"
                    android:singleLine="true"
                    android:inputType="textCapSentences" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/et_billingAddress1"
                    android:layout_below="@+id/textView5"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:textColorHint="@android:color/darker_gray"
                    android:hint="Address1"
                    android:background="@drawable/abc_textfield_default_mtrl_alpha"
                    android:textColor="@android:color/background_dark"
                    android:inputType="textCapSentences" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Phone"
                    android:id="@+id/textView6"
                    android:textColor="@android:color/background_dark"
                    android:textSize="20dp"
                    android:layout_below="@+id/textView4"
                    android:layout_alignLeft="@+id/textView4"
                    android:layout_alignStart="@+id/textView4"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:id="@+id/et_billingPhone"
                    android:layout_below="@+id/textView5"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:singleLine="true"
                    android:textColorHint="@android:color/darker_gray"
                    android:hint="Phone"
                    android:background="@drawable/abc_textfield_default_mtrl_alpha"
                    android:textColor="@android:color/background_dark" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Email"
                    android:id="@+id/textView7"
                    android:textColor="@android:color/background_dark"
                    android:textSize="20dp"
                    android:layout_below="@+id/textView4"
                    android:layout_alignLeft="@+id/textView4"
                    android:layout_alignStart="@+id/textView4"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/et_billingEmail"
                    android:layout_below="@+id/textView5"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:singleLine="true"
                    android:textColorHint="@android:color/darker_gray"
                    android:hint="Email"
                    android:background="@drawable/abc_textfield_default_mtrl_alpha"
                    android:textColor="@android:color/background_dark"
                    android:inputType="textEmailAddress" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Shipping Address"
                    android:id="@+id/textView8"
                    android:textColor="@android:color/background_dark"
                    android:textSize="22dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Address"
                    android:id="@+id/textView9"
                    android:textColor="@android:color/background_dark"
                    android:textSize="20dp"
                    android:layout_below="@+id/textView8"
                    android:layout_alignLeft="@+id/textView8"
                    android:layout_alignStart="@+id/textView8"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/et_shippingAddress"
                    android:layout_below="@+id/textView9"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:textColorHint="@android:color/darker_gray"
                    android:hint="Address"
                    android:background="@drawable/abc_textfield_default_mtrl_alpha"
                    android:textColor="@android:color/background_dark"
                    android:inputType="textCapSentences"
                    android:singleLine="true" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:id="@+id/et_shippingAddress1"
                    android:layout_below="@+id/textView9"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:textColorHint="@android:color/darker_gray"
                    android:hint="Address1"
                    android:background="@drawable/abc_textfield_default_mtrl_alpha"
                    android:textColor="@android:color/background_dark"
                    android:layout_gravity="center_horizontal"
                    android:singleLine="true"
                    android:inputType="textCapSentences" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Phone"
                    android:id="@+id/textView10"
                    android:textColor="@android:color/background_dark"
                    android:textSize="20dp"
                    android:layout_below="@+id/textView8"
                    android:layout_alignLeft="@+id/textView8"
                    android:layout_alignStart="@+id/textView8"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:ems="10"
                    android:id="@+id/et_shippingPhone"
                    android:layout_below="@+id/textView9"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:singleLine="true"
                    android:textColorHint="@android:color/darker_gray"
                    android:hint="Phone"
                    android:background="@drawable/abc_textfield_default_mtrl_alpha"
                    android:textColor="@android:color/background_dark" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Email"
                    android:id="@+id/textView11"
                    android:textColor="@android:color/background_dark"
                    android:textSize="20dp"
                    android:layout_below="@+id/textView8"
                    android:layout_alignLeft="@+id/textView8"
                    android:layout_alignStart="@+id/textView8"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:id="@+id/et_shippingEmail"
                    android:layout_below="@+id/textView9"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:singleLine="true"
                    android:textColorHint="@android:color/darker_gray"
                    android:hint="Email"
                    android:background="@drawable/abc_textfield_default_mtrl_alpha"
                    android:textColor="@android:color/background_dark"
                    android:inputType="textEmailAddress" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
